<!doctype html>
<html>
  <head>
    <title>Add Books <%=shopData.shopName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1><%=shopData.shopName%>: Add Book</h1>
    
    <% if(errors && errors.length > 0){ %>
        <ul>
            <% errors.forEach(function(error){ %>
                <li style="color:red"><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>

    <form action="/books/bookadded" method="POST">
      <label for="name"> Book Name: </label>
      <input type="text" id="name" name="name" value="<%= old ? old.name : '' %>" />
      <br><br>
      <label for="price"> Price (Â£) </label>
      <input type="number" id="price" name="price" step="0.01" value="<%= old ? old.price : '' %>" />
      <br><br>
      <input type="submit" value="Add Book" >
    </form>
  </body>
</html>