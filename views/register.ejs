<!doctype html>
<html>
  <head>
    <title>Register for <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Register for <%= shopData.shopName %></h1>

    <!-- ERROR MESSAGES -->
    <% if (typeof errors !== "undefined" && errors.length > 0) { %>
      <div style="color: red;">
        <ul>
          <% errors.forEach(function(err) { %>
            <li><%= err.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form method="POST" action="/users/registered">

      <p>First name:
        <input id="first" type="text" name="first" value="<%= old ? old.first : '' %>" />
      </p>

      <p>Last name:
        <input id="last" type="text" name="last" value="<%= old ? old.last : '' %>" />
      </p>

      <p>Email:
        <input id="email" type="email" name="email" value="<%= old ? old.email : '' %>" />
      </p>

      <p>Username:
        <input id="username" type="text" name="username" required value="<%= old ? old.username : '' %>" />
      </p>

      <p>Password: 
        <input id="password" type="password" name="password" required />
      </p>

      <input type="submit" value="Register" />
    </form>
  </body>
</html>
